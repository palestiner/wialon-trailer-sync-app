<?xml version="1.0" encoding="utf-8"?>
<Configuration>

    <!--These are some of the loggers you can enable. 
        There are several more you can find in the documentation. 
        Besides this log4j configuration, you can also use Java VM environment variables
        to enable other logs like network (-Djavax.net.debug=ssl or all) and 
        Garbage Collector (-XX:+PrintGC). These will be append to the console, so you will 
        see them in the mule_ee.log file. -->

    <Appenders>
        <RollingFile name="file" fileName="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}wialon-trailer-sync-app.log"
                 filePattern="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}wialon-trailer-sync-app-%i.log">
            <PatternLayout pattern="%-5p %d [%t] [processor: %X{processorPath}; event: %X{correlationId}] %c: %m%n"/>
            <SizeBasedTriggeringPolicy size="10 MB"/>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
		<Http name="ELK" url="https://elasticsearch.agroterra.ru/${env:mule.env:-qas}-wialon-trailer-sync-app/_doc">
			<JsonLayout compact="true" eventEol="true" properties="true" includeTimeMillis="true">
				<KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}"/>
				<KeyValuePair key="app-name" value="${env:mule.env:-qas}-wialon-trailer-sync-app"/>
			</JsonLayout>
			<Property name="kbn-xsrf" value="true" />
			<Property name="Content-Type" value="application/json"/>
			<Property name="Authorization" value="ApiKey ckFxT3pJTUI5OXltS1RJR2VDTnE6eFRUMGFVbVBRaWFCV2NuYVFUSG1sdw=="/>
			<!-- <PatternLayout pattern="%-5p %d [%t] [processor: %X{processorPath}; event: %X{correlationId}] %c: %m%n" /> -->
		</Http>
    </Appenders>

    <Loggers>
        <!-- Http Logger shows wire traffic on DEBUG -->
        <AsyncLogger name="org.mule.service.http.impl.service.HttpMessageLogger" level="DEBUG">
			<AppenderRef ref="file"/>
			<!-- <AppenderRef ref="ELK"/> -->
        </AsyncLogger>
        <AsyncLogger name="org.mule.service.http" level="WARN">
			<AppenderRef ref="file"/>
			<AppenderRef ref="ELK"/>
        </AsyncLogger>
        <AsyncLogger name="org.mule.extension.http" level="WARN">
			<AppenderRef ref="file"/>
			<AppenderRef ref="ELK"/>
        </AsyncLogger>

        <!-- Mule logger -->
        <AsyncLogger name="org.mule.runtime.core.internal.processor.LoggerMessageProcessor" level="INFO">
        	<AppenderRef ref="file"/>
			<AppenderRef ref="ELK"/>
        </AsyncLogger>
		<AsyncLogger name="com.inmar.connectors.kafka" level="DEBUG">
			<AppenderRef ref="file"/>
			<AppenderRef ref="ELK"/>
		</AsyncLogger>
    	<!-- <AsyncLogger name="com.inmar.connectors.kafka.internal.model.consumer" level="WARN"/> -->
<!--     	<AsyncLogger name="org.apache.kafka" level="DEBUG"/> -->
      <AsyncRoot level="INFO">
        <AppenderRef ref="file" level="INFO"/>
        <AppenderRef ref="file" level="DEBUG"/>
        <AppenderRef ref="ELK" level="INFO"/>
        <AppenderRef ref="ELK" level="DEBUG"/>
      </AsyncRoot>
    </Loggers>

</Configuration>
